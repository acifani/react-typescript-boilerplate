{
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build", "**/*.spec.ts"],
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"outDir": "build",
    "rootDir": "src",
    "jsx":"react",
		"esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
		"suppressImplicitAnyIndexErrors": true
	}
}
