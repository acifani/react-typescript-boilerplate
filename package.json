{
  "name": "react-typescript-boilerplate",
  "version": "0.0.1",
  "description": "React + TS app boilerplate",
  "author": "Alessandro Cifani <alessandro.cifani@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn format && yarn typecheck && yarn lint && webpack --config webpack.prod.js",
    "watch": "webpack-dev-server --config webpack.dev.js --open",
    "typecheck": "tsc --noEmit --pretty",
    "format": "prettier --write \"{src,__tests__}/**/*.{ts,tsx}\"",
    "lint": "tslint --force --format verbose \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "awesome-typescript-loader": "^5.2.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.2",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.14.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-merge": "^4.1.4"
  }
}
